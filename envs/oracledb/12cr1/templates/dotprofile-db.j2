# Set up the Oracle environment variables
        umask 022
        ORACLE_BASE={{ databases[0].oracle_base }}
        export ORACLE_BASE
        ORACLE_HOME={{ databases[0].oracle_home_db }}
        export ORACLE_HOME
        NLS_LANG=american_america.al32utf8
        export NLS_LANG
        ORA_NLS33=$ORACLE_HOME/ocommon/nls/admin/data
        export ORA_NLS33
        SHLIB_PATH=$ORACLE_HOME/lib
        export SHLIB_PATH
        LD_LIBRARY_PATH=$ORACLE_HOME/lib
        export LD_LIBRARY_PATH
        SQLPATH=/home/oracle/.Scripts
        export SQLPATH
        export ORACLE_DBNAME={{ databases[0].name }}
#        export ORACLE_SID=${get_sid:-$ORACLE_DBNAME}
        export ORACLE_SID=$ORACLE_DBNAME
        export ORA_DB_UNQ_NAME={% if databases[0].oracle_db_unique_name is defined %}{{ databases[0].oracle_db_unique_name }}{% else %}{{ databases[0].name }}{% endif %}
        
        export NLS_DATE_FORMAT='YYYY-MM-DD HH24:MI:SS'


{% if shell_ps1 is defined %}
export PS1={{ shell_ps1 }}
{% endif %}
get_sid=$(ps -ef | grep "ora_pmon_$ORACLE_DBNAME" |grep -v grep | sed 's/^.*pmon_//g')


export PATH=$ORACLE_HOME/bin:$ORACLE_HOME/OPatch:$PATH:$SQLPATH:$GG_HOME/

# Set Up Aliases:
{% if shell_aliases is defined %}
{% for alias in shell_aliases %}
        alias {{ alias }}
{% endfor %}
{% endif %}

