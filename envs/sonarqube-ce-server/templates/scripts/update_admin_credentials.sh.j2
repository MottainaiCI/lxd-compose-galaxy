#!/bin/bash
# shellcheck disable=SC1090
source "$(dirname $0)"/automation_tools.sh

new_password="$(generate_password)"
change_password -a {{ sonar_server_config.admin.username }} -c {{ sonar_server_config.admin.previous_password }} \
                   {{ sonar_server_config.admin.username }} {{ sonar_server_config.admin.previous_password }} "$new_password"
echo "$new_password" > /scripts/{{ sonar_server_config.admin.username }}.password